/* tsconfig.json */

{
  "compilerOptions":{
    "target":"es6",
    "lib": ["ES6"],
    "module":"commonjs",
    "outDir":"dist/",
    "rootDir":"src/",
    "strict": true,
    "moduleResolution":"node",
    "esModuleInterop":true,
    "alwaysStrict": true,
    "removeComments": true,
    "strictNullChecks": true,
   }
}